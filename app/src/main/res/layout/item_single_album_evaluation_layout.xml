<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_avator"
        android:layout_width="121px"
        android:layout_height="121px"
        android:layout_marginLeft="55px"
        android:layout_marginTop="55px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28px">

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55px"
            android:text="嘻哈小混蛋"
            android:textColor="@color/maya_color_black_text_main"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_stars"
            android:layout_width="230px"
            android:layout_height="60px"
            android:layout_below="@id/tv_nick_name"
            android:layout_marginTop="8px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_stars"
            android:layout_marginTop="28px"
            android:layout_marginRight="72px"
            android:textColor="@color/maya_color_black_text_main"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="94px"
            android:layout_below="@id/tv_content"
            android:layout_marginTop="17px"
            android:textColor="@color/maya_black_bbbbbb"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="183px"
            android:layout_height="137px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="39px"
            android:layout_marginRight="160px" />

        <TextView
            android:id="@+id/tv_repet"
            android:layout_width="wrap_content"
            android:layout_height="94px"
            android:layout_alignBottom="@id/tv_date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="43px"
            android:gravity="center_vertical"
            android:text="3423"
            android:textColor="@color/maya_black_bbbbbb"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_good"
            android:layout_width="wrap_content"
            android:layout_height="94px"

            android:layout_alignBottom="@id/tv_date"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@id/tv_repet"
            android:drawableLeft="@drawable/weike_icon_btn_like"
            android:drawableTint="@color/maya_black_bbbbbb"
            android:gravity="center_vertical"
            android:text="2342"
            android:textColor="@color/maya_black_bbbbbb"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/tv_date"
            android:layout_marginTop="20px"
            android:background="@color/maya_color_line" />

    </RelativeLayout>

</LinearLayout>
