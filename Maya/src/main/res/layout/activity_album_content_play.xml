<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#596c80"
        android:orientation="vertical"
        tools:context=".activity.AlbumContentPlayActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="176px"
                android:gravity="center"
                android:text=""
                android:textColor="@color/maya_color_white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="806px"
                android:layout_height="806px"
                android:layout_below="@id/tv_title"
                android:layout_centerHorizontal="true" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_below="@id/iv_cover"
                android:layout_marginLeft="54px"
                android:layout_marginTop="80px"
                android:layout_marginRight="54px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="271px"
            android:layout_marginLeft="54px"
            android:layout_marginRight="54px">

            <LinearLayout
                android:id="@+id/ll_play_list"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_play_list"
                    android:layout_width="110px"
                    android:layout_height="110px"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/notify_btn_light_list"
                    android:tint="@color/maya_color_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="播放列表"
                    android:textColor="@color/maya_color_white"
                    android:textSize="11sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_play_status"
                android:layout_width="204px"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:padding="20px"
                android:src="@drawable/video_pause_to_playing" />

            <ImageView
                android:id="@+id/iv_previous_one"
                android:layout_width="190px"
                android:layout_height="190px"
                android:layout_centerVertical="true"
                android:layout_marginRight="37px"
                android:layout_toLeftOf="@id/iv_play_status"
                android:padding="20px"
                android:src="@drawable/bg_whrite_reflect_ic_notification_previous_for_media_style_new" />

            <ImageView
                android:id="@+id/iv_next_one"
                android:layout_width="190px"
                android:layout_height="190px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="37px"
                android:layout_toRightOf="@id/iv_play_status"
                android:padding="20px"
                android:src="@drawable/bg_whrite_reflect_ic_notification_next_for_media_style_new" />

            <LinearLayout
                android:id="@+id/ll_time_close"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_time_close"
                    android:layout_width="110px"
                    android:layout_height="110px"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/reflect_ic_notification_timing_for_media_style"
                    android:tint="@color/maya_color_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="定时关闭"
                    android:textColor="@color/maya_color_white"
                    android:textSize="11sp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>