<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/maya_color_white"
        tools:context=".activity.SplashActivity">


        <com.yannis.baselib.utils.status_bar.StatusBarHeightView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:use_type="use_height" />

        <TextView
            android:id="@+id/fullscreen_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_corners_transation_half"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text=""
            android:textColor="@color/maya_color_white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rl_bottom" />

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_theme"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_launcher_splash" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_theme"
                android:gravity="center_vertical"
                android:text="玛雅听声"
                android:textColor="@color/maya_color_theme"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
