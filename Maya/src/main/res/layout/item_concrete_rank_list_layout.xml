<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="itemMode"
            type="com.yannis.mayalisten.bean.AggregateRankListTabsBean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="324px"
        android:layout_gravity="center"
        android:background="@color/maya_color_white"
        android:paddingRight="51px">

        <RelativeLayout
            android:id="@+id/rl_rank"
            android:layout_width="144px"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_rank_innr"
                android:layout_width="144px"
                android:layout_height="wrap_content"
                android:layout_marginTop="80px">

                <ImageView
                    android:id="@+id/iv_fanlist"
                    android:layout_width="74px"
                    android:layout_height="74px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/live_fanlist_top1"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="144px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/maya_black_bbbbbb"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_rank_notice"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_below="@id/rl_rank_innr"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_album_img"
            android:layout_width="228px"
            android:layout_height="228px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_rank" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="43px"
            android:layout_toRightOf="@id/iv_album_img">

            <TextView
                android:id="@+id/tv_content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/maya_color_black_text_main"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_content_title"
                android:layout_marginTop="4px"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/maya_black_999999"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_second"
                android:layout_marginTop="16px"
                android:text=""
                android:textColor="@color/maya_black_bbbbbb"
                android:textSize="10dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="144px"
            android:background="@color/maya_color_line" />
    </RelativeLayout>


</layout>
