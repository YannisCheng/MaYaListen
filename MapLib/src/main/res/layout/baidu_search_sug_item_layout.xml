<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:background="@color/Gray_400" />

    <ImageView
        android:id="@+id/iv_chat_group_click"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_large"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_chat_group_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_toLeftOf="@+id/iv_chat_group_click"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_large">

        <TextView
            android:id="@+id/tv_title_baidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大悦城"
            android:textColor="@color/Black"
            android:textSize="@dimen/text_size_small_X" />

        <TextView
            android:id="@+id/tv_address_baidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="北京市朝阳区大悦城"
            android:textColor="@color/Gray_900"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</RelativeLayout>
